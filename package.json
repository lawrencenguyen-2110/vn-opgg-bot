{
  "name": "vn-opgg-discord-bot",
  "version": "1.0.0",
  "description": "Discord bot for tracking League of Legends statistics from OP.GG for Vietnam region players",
  "main": "src/bot.js",
  "scripts": {
    "start": "node src/bot.js",
    "dev": "nodemon src/bot.js",
    "test": "node test/test-runner.js",
    "test:real": "node test/test-real-data.js",
    "test:bot": "node test/test-bot-logic.js",
    "test:puppeteer": "node test/test-puppeteer.js",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ test/ --fix",
    "deploy:register": "node src/deploy-commands.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop vn-opgg-bot",
    "pm2:restart": "pm2 restart vn-opgg-bot",
    "pm2:logs": "pm2 logs vn-opgg-bot",
    "pm2:delete": "pm2 delete vn-opgg-bot",
    "docker:build": "docker build -t vn-opgg-bot .",
    "docker:run": "docker run --env-file .env vn-opgg-bot",
    "docker:compose": "docker-compose up -d",
    "logs": "tail -f logs/combined.log",
    "setup": "npm install && npm run deploy:register && echo 'Setup complete! Run npm run dev to start development'",
    "clean": "rm -rf logs/*.log && rm -rf screenshots/",
    "health": "node scripts/health-check.js"
  },
  "keywords": [
    "discord",
    "bot",
    "league-of-legends",
    "opgg",
    "vietnam",
    "gaming",
    "statistics",
    "esports"
  ],
  "author": {
    "name": "lawrencenguyen",
    "email": "vanlamnguyen2110@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lawrencenguyen-2110/vn-opgg-discord-bot.git"
  },
  "bugs": {
    "url": "https://github.com/lawrencenguyen-2110/vn-opgg-discord-bot/issues"
  },
  "homepage": "https://github.com/lawrencenguyen-2110/vn-opgg-discord-bot#readme",
  "engines": {
    "node": ">=18.18.0"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "discord.js": "^14.15.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^8.1.0",
    "node-cron": "^3.0.3",
    "puppeteer": "^24.22.3",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "eslint": "^9.36.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.6.2",
    "supertest": "^7.0.0"
  },
  "optionalDependencies": {
    "@sentry/node": "^8.17.0",
    "pg": "^8.12.0",
    "pm2": "^5.4.2",
    "redis": "^4.6.15"
  },
  "browserslist": [
    "node >= 18"
  ],
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "js,json",
    "ignore": [
      "logs/",
      "screenshots/",
      "node_modules/"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "es2022": true
    },
    "rules": {
      "no-console": "off",
      "prefer-const": "error",
      "no-unused-vars": "warn"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/bot.js"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ]
  }
}